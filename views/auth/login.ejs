<% layout('../layout/boilerplate') -%>

<div class="container mt-4">
    <div class="row">
        <form class="col-6 mx-auto d-flex flex-column r-gap-2" style="row-gap: 2rem" action="/auth/login" method="post">
            <div class="card-title">Login Now!</div>
            <div class="form-group">
                <label for="username">Username</label>
                <input name="username" type="text" class="form-control" id="username" aria-describedby="usernameHelp" placeholder="Enter username">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>

