<% layout('../layout/boilerplate') -%>

<div class="card mx-auto mt-5" style="width: 60%">
    <div class="card-header">
        Modify Item Details
    </div>
    <div class="card-body">
        <form method="post" class="validated-form" novalidate action="/products/<%= product.id %>?_method=PATCH">
            <div class="mb-3">
                <label for="img" class="form-label">Image URL</label>
                <input name="img" type="url" class="form-control" id="img" aria-describedby="img-url" value="<%=product.img%>" required>
                <div id="img-url-help" class="form-text">Enter the Image URL!</div>
            </div>

            <label for="name" class="form-label">Title</label>
            <input name="name" type="text" class="form-control" id="name" required value="<%= product.name %>">

            <label for="desc" class="form-label">Description</label>
            <textarea name="desc" class="form-control" id="desc" required><%= product.desc %></textarea>

            <label for="price" class="form-label">Price</label>
            <input name="price" type="number" min='0' class="form-control" id="price" required value="<%=Number(product.price)%>">

            <button type="submit" class="btn btn-primary mt-2">Submit</button>
        </form>
    </div>
</div>